{% for group_name, cfg in k8s_rbac_groups.items() if '*' in cfg.namespaces %}
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
metadata:
  name: {{ group_name }}-cluster-role
rules:
- apiGroups: [""]
  resources: {{ cfg.resources }}
  verbs: {{ cfg.verbs }}
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: {{ group_name }}-cluster-binding
subjects:
{% for user in cfg.users %}
- kind: ServiceAccount
  name: {{ user }}-sa
  namespace: {{ cfg.default_namespace | default('default') }}
{% endfor %}
roleRef:
  kind: ClusterRole
  name: {{ group_name }}-cluster-role
  apiGroup: rbac.authorization.k8s.io
---
{% endfor %}
